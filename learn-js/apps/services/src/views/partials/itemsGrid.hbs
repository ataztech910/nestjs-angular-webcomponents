<div class="uk-grid-column-small uk-grid-row-large uk-child-width-1-3@s uk-text-left" uk-grid>
{{#each items}}
    <div>
        <div class="uk-card uk-card-default">
            <div class="uk-card-media-top">
                <img src="{{image}}" width="1800" height="1200" alt="">
            </div>
            <div class="uk-card-body">
                <h3 class="uk-card-title">{{title}}</h3>
                <p>{{description}}</p>
                <div>
                    <b>
                        {{price}}
                    </b>
                </div>
                <button hx-put="/shop/add-to-cart"
                        hx-target="#cart" 
                        class="uk-button uk-button-secondary">+ Add to cart
                </button>
            </div>
        </div>
    </div>
{{/each}}
</div>